{% extends 'base-admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ product.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            
            {% for image in product.productPictures %}
            <tr>
                <th>image:</th>
                <td>
                    <img src="{{asset(('build/images/' ~ image.path))}}" alt="{{image.libelle}}">
                </td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>

    <a href="{{ path('app_product_crud_index') }}">back to list</a>

    <a href="{{ path('app_product_crud_edit', {'id': product.id}) }}">edit</a>

    {{ include('product_crud/_delete_form.html.twig') }}
{% endblock %}
